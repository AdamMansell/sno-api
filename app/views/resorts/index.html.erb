<p id="notice"><%= notice %></p>

<h1>Resorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Snow fall</th>
      <th>Main parking</th>
      <th>Herm parking</th>
      <th>Lift 1</th>
      <th>Lift 2</th>
      <th>Lift 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resorts.each do |resort| %>
      <tr>
        <td><%= resort.name %></td>
        <td><%= resort.snow_fall %></td>
        <td><%= resort.main_parking %></td>
        <td><%= resort.herm_parking %></td>
        <td><%= resort.lift_1 %></td>
        <td><%= resort.lift_2 %></td>
        <td><%= resort.lift_3 %></td>
        <td><%= link_to 'Show', resort %></td>
        <td><%= link_to 'Edit', edit_resort_path(resort) %></td>
        <td><%= link_to 'Destroy', resort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

